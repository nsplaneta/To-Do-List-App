{% extends 'base.html.twig' %}

{% block title %}ToDoApp Controller{% endblock %}
{% block head %}
<meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="./css/style.css">
{% endblock %}

{% block body %}
    <div class="header">
        <h2>My To Do List</h2>
        <form method="post" action="{{ path('create') }}">
            <input type="text" id="myInput" name="title" placeholder="Task title..." />
            <button type="submit" class="addBtn">Add a task</button>
        </form>
    </div>

    <ul>
        {% for task in tasks %}
        <li {% if task.status %}class="checked"{% endif %}>
            <a href="{{ path('update', {id:task.id}) }}"> <span class="task-list-item">{{ task.title }}</span> </a
            ><a onclick="return confirm('Are you sure to delete?')" href="{{ path('delete', {id:task.id}) }}"><span class="close">X</span></a>
        </li>
        {% endfor %}
    </ul>
{% endblock %}
